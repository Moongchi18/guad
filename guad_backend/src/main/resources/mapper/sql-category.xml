<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="auction.guad.mapper.CategoryMapper">

	<select id="selectAllCategory" resultType="auction.guad.dto.CategoryDto">
		SELECT * FROM category
	</select>
	
	<select id="selectItemType" resultType="auction.guad.dto.CategoryDto">
		SELECT DISTINCT ITEM_TYPE FROM CATEGORY
		WHERE ITEM_TYPE=#{itemType}
	</select>
	
	<select id="selectItemDType" resultType="auction.guad.dto.CategoryDto">
		SELECT * FROM CATEGORY
		WHERE ITEM_D_TYPE=#{itemDType}
	</select>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="auction.guad.mapper.AuctionMapper">


	<!-- 입찰 -->
	<insert id="tryAuction"
		parameterType="auction.guad.controller.model.Auction">
		INSERT INTO AUCTION (ITEM_NUM, MEMBER_EMAIL, AUCTION_PRICE,
		AUCTION_TIME) values
		(#{itemNum}, #{memberEmail}, #{auctionPrice}, now())
	<!-- 	<selectKey keyProperty="auctionNum" resultType="Integer">
			select last_insert_try()
		</selectKey> -->
	</insert>

	<!-- 입찰 취소 -->
	<delete id="cancelAuction" parameterType="int">
		DELETE FROM AUCTION WHERE AUCTION_NUM = #{auctionNum}
	</delete>



</mapper>